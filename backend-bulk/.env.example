# ============================================
# Bulk Processing Backend - Environment Configuration
# ============================================
# Copy this file to .env and fill in your values
# Run: python scripts/create_env.py
# ============================================

# API Configuration
API_HOST=0.0.0.0
API_PORT=8001
API_WORKERS=4
DEBUG=true
ENVIRONMENT=development

# CORS Configuration
CORS_ORIGINS=["*"]

# ============================================
# Database Configuration (REQUIRED)
# ============================================
# Get your connection string from Supabase:
# 1. Go to Project Settings â†’ Database
# 2. Copy Connection string (URI format)
# 3. Replace [YOUR-PASSWORD] with your database password
# 4. Add +asyncpg after postgresql (or it will be auto-converted)
# ============================================
DATABASE_URL=postgresql+asyncpg://postgres:YOUR_PASSWORD@db.xxxxx.supabase.co:5432/postgres

# Supabase Configuration (Optional)
SUPABASE_URL=https://xxxxx.supabase.co
SUPABASE_SERVICE_KEY=your_service_role_key
SUPABASE_ANON_KEY=your_anon_key

# ============================================
# Redis Configuration
# ============================================
REDIS_URL=redis://localhost:6379/0
REDIS_PASSWORD=

# ============================================
# Celery Configuration
# ============================================
CELERY_BROKER_URL=redis://localhost:6379/0
CELERY_RESULT_BACKEND=redis://localhost:6379/0
CELERY_WORKER_CONCURRENCY=10
CELERY_WORKER_MAX_TASKS_PER_CHILD=1000

# ============================================
# Processing Defaults
# ============================================
DEFAULT_PARALLEL_WORKERS=10
DEFAULT_BATCH_SIZE=50
DEFAULT_MAX_RETRIES=3
DEFAULT_RETRY_DELAY=60

# ============================================
# LLM Configuration
# ============================================
LITELLM_API_URL=https://proxyllm.ximplify.id
LITELLM_API_KEY=your_litellm_api_key

# ============================================
# Source Adapter Configuration
# ============================================
FOLDER_WATCHER_ENABLED=true
DATABASE_SOURCE_ENABLED=true
CLOUD_STORAGE_ENABLED=false

# ============================================
# AWS S3 Configuration (Optional)
# ============================================
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
S3_BUCKET_NAME=
S3_REGION=us-east-1

# ============================================
# Logging Configuration
# ============================================
LOG_LEVEL=INFO